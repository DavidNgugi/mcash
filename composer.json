{

	"name": "mCash",
  	"description": "A PHP package for the M-Pesa Daraja REST API",
  	"keywords": [
    	"mcash",
    	"mpesa",
    	"safaricom",
    	"api",
    	"mobile",
    	"money"
  	],
  	"authors": [
        {
            "name": "David Ngugi",
            "email": "david@davidngugi.com"
        },
				{
					"name": "Ayim Domnic",
					"email": "ayimdomnic@gmail.com"
				}
    ],
  	"license": "MIT",
  	"type": "package",
    	"require": {
    		"php": ">=^7.1",
    		"illuminate/support": "~5.5.x",
        	"guzzlehttp/guzzle": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Mcash\\Pesa\\" : "src"
        }
    },
    "require-dev": {
        "mockery/mockery": "dev-master",
        "phpunit/phpunit": "4.*"
    },
		"minimum-stability": "dev",
		"prefer-stable": true,
		"extra": {
			"laravel": {
				"providers": [
            "Mcash\\Pesa\\McashServiceProvider"
        ],
        "aliases": {
            "Mcash": "Mcash\\Pesa\\Facades\\Mcash"
        }
			}
		},

}
